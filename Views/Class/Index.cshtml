@model IEnumerable<SchoolManagementApp.MVC.Data.Class>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                qHtml.DisplayNameFor(model => model.Time)
            </th>
            <th>
                qHtml.DisplayNameFor(model => model.Courses)
            </th>
            <th>
                qHtml.DisplayNameFor(model => model.Lecturer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
qforeach (var item in Model) {
        <tr>
            <td>
                qHtml.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                qHtml.DisplayFor(modelItem => item.Courses.Id)
            </td>
            <td>
                qHtml.DisplayFor(modelItem => item.Lecturer.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="qitem.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="qitem.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="qitem.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
