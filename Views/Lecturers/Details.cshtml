@model SchoolManagementApp.MVC.Data.Lecturer

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-4">Details Lecturer</h1>

<div>
    <hr />

    <form class="row">

        <div class="mb-3">
            <label for="FirstName" class="form-label">@Html.DisplayNameFor(model => model.FirstName)</label>
            <input type="text" class="form-control" id="FirstName" aria-describedby="FirstName"
                value="@Html.DisplayFor(model => model.FirstName)" readonly>
        </div>
        <div class="mb-3">
            <label for="LastName" class="form-label">@Html.DisplayNameFor(model => model.LastName)</label>
            <input type="text" class="form-control" id="LastName" aria-describedby="LastName"
                value="@Html.DisplayFor(model => model.LastName)" readonly>
        </div>
    </form>
</div>
<div>
  <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model?.Id">Edit</a>
  <a class="btn btn-danger" asp-action="Index"><i class="fa-solid fa-house"></i> Back to List</a>
</div>
